#:kivy 2.2.1

<RoundedButton@Button>:
    background_color: .65,.20,.08,0
    background_normal: ""
    canvas.before:
        Color:
            rgba: (.65,.20,.08,1) if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    

<RoundedToggleButton@ToggleButton>:
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: (.65,.20,.08,1) if self.state=='normal' else (0,.7,.7,1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<CitySearch>:
    multiline: False
    size_hint_y: None
    height: "40dp"
    hint_text: "Search for a city"

<TopMenu>:
    imperial: imperial_button
    metric: metric_button
    orientation: "horizontal"
    text_input: search_input
    size_hint_y: None
    pos_hint: {"top": 1, 'x': 0.0}
    height: "50dp"
   
    BoxLayout:
        orientation: "horizontal"
        padding: {"10dp", "10dp", "10dp", "20dp"}
        margin: {"10dp", "10dp", "10dp", "10dp"}
        spacing: "10dp"
        CitySearch:
            id: search_input
            center_y: self.parent.center_y

        RoundedButton:
            text: 'Search'
            size_hint_x: None
            size_hint_y: None
            width: "100dp"
            height: "40dp" 
            on_release: root.parent.parent.parent.search_button_pressed(search_input.text)
        RoundedButton:
            text: "Set\nLocation"
            font_size: 14
            size_hint_x: None
            size_hint_y: None
            width: "80dp"
            height: "40dp"
            on_release: root.set_location_pressed(search_input.text)

        RoundedButton:
            text: "+"
            font_size: 16
            size_hint_x: None
            size_hint_y: None
            width: "40dp"
            height: "40dp"
            on_release: root.add_favorite_pressed(search_input.text)

        RoundedToggleButton:
            id: imperial_button
            text: "℉"
            font_name: "Fonts/SF-Pro.ttf"
            font_size: 16
            group: 'temp_units_group'
            size_hint_x: None
            width: "40dp"
            size_hint_y: None
            height: "40dp"
            state: root.get_default_units("imperial")
            on_release: root.unit_button_pressed("imperial")

        RoundedToggleButton:
            id: metric_button
            text: "℃"
            font_name: "Fonts/SF-Pro.ttf"
            font_size: 16
            size_hint_x: None
            width: "40dp"
            size_hint_y: None
            height: "40dp"
            group: 'temp_units_group'
            state: root.get_default_units("metric")
            on_release: root.unit_button_pressed("metric")

<CurrentWeather>:
    current_temp_label: current_temp_label
    current_conditions: current_conditions
    current_city_label: current_city_label
    current_sunrise_label: current_sunrise_value
    current_sunset_label: current_sunset_value
    current_humidity_label: current_humidity_value
    current_wind_label: current_wind_label
    current_pressure_label: current_pressure_value
    current_visibility_label: current_visibility_value
    size_hint_y: 1
    size_hint_x: 1
   
    GridLayout:
        id: current_conditions
        orientation: "lr-tb"
        center_y: self.parent.center_y
        spacing: "10dp"
        cols: 2
        rows: 1
        BoxLayout:
            orientation: "vertical"
            padding: "10dp", "10dp"
            spacing: "10dp"
            size_hint_x: None
            width: "600dp"
            canvas.before:
                Color:
                    rgba: 0.15, 0.15, 0.15, .5
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [10,]
            
            GridLayout:
                padding: "5dp", "5dp"
                spacing: "5dp"
                orientation: "lr-tb"
                cols: 2
                rows: 3

                Label:
                    id: current_temp_label
                    text: "57"
                    font_name: "fonts/SF-Pro.ttf"
                    font_size: 60
                    halign: "left"
                    color: 1, 1, 1, 1
                
                Image:
                    id: current_weather_icon
                    source: root.current_weather_icon
                    allow_stretch: True
                    
                
                Label:
                    id: current_city_label
                    text: "Mos Eisley"
                    font_name: "fonts/SF-Pro.ttf"
