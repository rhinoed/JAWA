<DailyWeather>:
    spacing: "10dp"
    
    BoxLayout:
        id: daily_weather_layout
        orientation: "vertical"
        padding: "10dp", "10dp"
        spacing: "10dp"

        canvas.before:
            Color:
                rgba: 0.15, 0.15, 0.15, .5
            RoundedRectangle:
                pos: self.pos
                size: self.size
                radius: [10,]
        BoxLayout:
            id: daily_conditions
            padding: "10dp"
            spacing: "20dp"
            orientation: "vertical"

            Label:
                id: day_label
                text: root.day_label
                font_name: "fonts/SF-Pro.ttf"
                font_size: 24
                size_hint_y: None
                size_hint_x: None
                height: "30dp"
                width: "200dp"  # Adjusted width for better alignment
                pos_hint: {"center_x": 0.5}  # Center horizontally
                color: 1, 1, 1, 1

            Label:
                id: daily_temp_label
                text: root.daily_temp_label
                font_name: "fonts/SF-Pro.ttf"
                font_size: 42
                size_hint_y: None
                size_hint_x: None
                height: "50dp"
                width: "200dp"  # Adjusted width for better alignment
                pos_hint: {"center_x": 0.5}  # Center horizontally
                color: 1, 1, 1, 1
            Label:
                id: daily_description_label
                text: root.daily_description_label
                font_name: "fonts/SF-Pro.ttf"
                font_size: "12dp"
                size_hint_y: None
                size_hint_x: None
                height: "15dp"
                width: "200dp"  # Adjusted width for better alignment
                pos_hint: {"center_x": 0.5}  # Center horizontally
                color: 1, 1, 1, 1

            Image:
                id: daily_weather_icon
                source: root.daily_weather_icon
                allow_stretch: True
                size_hint_y: None
                size_hint_x: None
                height: "80dp"
                width: "80dp"
                pos_hint: {"center_x": 0.5}  # Center horizontally


<Weather>:
    top_menu: top_menu
    current_weather: current_weather
    daily_weather: daily_weather
    orientation: "vertical"
    FloatLayout:
        Image:
            source: 'images/jawas.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: "vertical"
            padding: "10dp", "10dp"
            spacing: "10dp"
            TopMenu:
                id: top_menu
            CurrentWeather:
                id: current_weather
                margin: {"30dp", "10dp", "10dp", "30dp"}
                padding: {"10dp", "10dp", "10dp", "10dp"}
                orientation: "horizontal"
                pos_hint: {"top": 1}
            ScrollView:
                DailyWeather:
                    id: daily_weather
                    pos_hint: {"bottom": 1}
                    size_hint: None, 1
                    width: max(self.minimum_width , root.width + dp(1000))








